<h1 class="page-header">Rounds Played</h1>

<div id="chartdiv" style="width: 100%; height: 500px;"></div>

<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Course</th>
      <th>Score</th>
      <th>Fairway %</th>
      <th>GIR %</th>
    </tr>
  </thead>
  <tbody>
    <% @rounds.each do |r| %>
      <tr>
        <td><%= r["Date"] %></td>
        <td><%= r["Course"] %></td>
        <td><%= r["Score"] %></td>
        <td><%= r["Fairway"] %></td>
        <td><%= r["GIR"] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
